<div class="center-align">
  <h1>Your currencies</h1>
</div>
<div class="container">
  <div class="row center-align">
    <% @past_currencies.each do |each_past| %>
      <% @name = Currency.find(each_past[0]).name.upcase %>
      <% @min = each_past[1].pluck(:mid).min%>
      <% @max = each_past[1].pluck(:mid).max%>
      <% @avg = (@max-@min).abs%>
      <%= line_chart each_past[1].pluck(:day,:mid), min: (@min-@avg), max: (@max+@avg), curve: false, title: @name %>
    <%end%>
  </div>
  <div class="row center-align">
    <%= link_to new_user_currency_path, :class => "waves-effect waves-light btn-large" do%>
      ADD CURRENCIES
      <i class="material-icons left">add</i>
    <% end %>
  </div>
</div>
