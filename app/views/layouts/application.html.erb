<!DOCTYPE html>
<html>
  <head>
    <title>Alert Walutowy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div>
      <%= link_to root_path do %>
        <h1>Alert Walutowy</h1>
      <% end %>
    </div>

    <div>
      <% if user_signed_in? %>
          <p class="control">
            <%= link_to current_user.nick, edit_user_registration_path %>
          </p>
          <p>
            <%= link_to "Dodaj waluty" ,new_user_currency_path %>
          </p>
          <p>
            <%= link_to  "Wybrane waluty", logged_user_index_path %>
          </p>
          <p>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
          </p>
        <% else %>
          <p class="control">
            <%= link_to 'Sign Up', new_user_session_path %>
          </p>
          <p class="control">
            <%= link_to 'Sign In', new_user_registration_path %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
